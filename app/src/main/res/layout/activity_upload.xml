<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <TextView
        android:id="@+id/epiExplorerHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EpiLogger"
        android:textSize="56sp"
        android:textColor="#1e3e7e"
        android:fontFamily="@font/alfa_slab_one"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="#000"
        android:shadowRadius="2"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/uploadContainer"
        android:layout_width="357dp"
        android:layout_height="518dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_container_background"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/epiExplorerHeader">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alfa_slab_one"
            android:text="EpiUpload"
            android:textColor="#1e3e7e"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/upload_header"
            android:textColor="#1e3e7e"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_background"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="top"
            android:hint="Beskriv symptomer eller området du er bekymret for, inkluder detaljer som varighed, eventuelle ændringer i tilstanden, og andre relevante oplysninger."
            android:inputType="textMultiLine"
            android:minLines="4"
            android:padding="10dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/filePickerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/alfa_slab_one"
            android:padding="16dp"
            android:text="Vælg billede"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/alfa_slab_one"
            android:padding="16dp"
            android:text="Upload billede"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/backToDashboard"
            android:layout_width="317dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/alfa_slab_one"
            android:padding="5dp"
            android:text="@string/back_to_dashboard"
            android:textColor="#2b4a84"
            android:textSize="22sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
